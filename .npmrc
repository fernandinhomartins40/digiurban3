# NPM Configuration for Docker builds - Optimized for network issues 2024
registry=https://registry.npmjs.org/
audit=false
fund=false
progress=true
loglevel=verbose
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-retries=5
network-timeout=600000
prefer-offline=false
cache-max=0
strict-ssl=false
timing=true
maxsockets=50